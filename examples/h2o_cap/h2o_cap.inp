method=adc2-s

initial_state=0
istate_symm = 1

dipole_component = x
dipole_symm = 1

frozen_core=initial,final

scf_iter=100

mem=900

propagation_section

 # Central frequency
 pulse_freq=0.043

 # Intensity
 pulse_strength=1e+14,winvcm2

 # Direction
 pulse_vec=0.0,0.0,1.0

 # Pulse type
 pulse=cos

 # Pulse envelope
 envelope=cos2,0.0,1000.0

 # Propagation time
 tfinal=42.0

 # Output timestep
 tout=0.05

 # Maximum Krylov subspace dimension
 krydim=7

 # SIL error tolerance
 tol=1e-6
end-propagation_section

cap_section
 cap_type=sigmoidal
 cap_strength=10.0
 cap_width=10.0 , angstrom
end-cap_section

end-input
